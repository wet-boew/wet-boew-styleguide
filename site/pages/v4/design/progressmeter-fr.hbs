		<thead>
			<tr>
				<th scope="col">Description</th>
				<th scope="col">Min</th>
				<th scope="col">Low</th>
				<th scope="col">Value</th>
				<th scope="col">Max</th>
				<th scope="col">High</th>
				<th scope="col">Result</th>
			</tr>
		</thead>
		<tbody>
